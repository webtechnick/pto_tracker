#!/bin/bash

# PTO Tracker Docker Aliases
# Source this file in your shell: source pto-aliases

# Main Docker commands
alias doc='docker-compose'
alias docup='docker-compose up -d'
alias docdown='docker-compose down'
alias docrestart='docker-compose restart'
alias doclogs='docker-compose logs -f'

# PHP/Laravel commands
alias docphp='docker-compose exec app php'
alias docart='docker-compose exec app php artisan'
alias doccomposer='docker-compose exec app composer'
alias docphpunit='docker-compose exec app ./vendor/bin/phpunit'

# Node/Asset commands
alias docnode='docker-compose exec node'
alias docnpm='docker-compose exec node npm'
alias docbuild='docker-compose exec node npm run dev'
alias docwatch='docker-compose exec node npm run watch'
alias docprod='docker-compose exec node npm run prod'

# Database commands
alias docdb='docker-compose exec app php artisan migrate'
alias docseed='docker-compose exec app php artisan db:seed'
alias docfresh='docker-compose exec app php artisan migrate:fresh --seed'
alias doctinker='docker-compose exec app php artisan tinker'

# Cache commands
alias docclear='docker-compose exec app php artisan cache:clear'
alias docconfig='docker-compose exec app php artisan config:clear'
alias docroute='docker-compose exec app php artisan route:clear'
alias docview='docker-compose exec app php artisan view:clear'

# Shell access
alias docshell='docker-compose exec app bash'
alias docnodeshell='docker-compose exec node sh'

# Quick status
alias docstatus='docker-compose ps'

# Quick rebuild (useful for development)
alias docrebuild='docker-compose down && docker-compose up -d --build'

echo "ðŸš€ PTO Tracker Docker aliases loaded!"
echo ""
echo "ðŸ“‹ Available commands:"
echo "  docphpunit     - Run tests"
echo "  docart         - Laravel artisan commands"
echo "  docbuild       - Build assets"
echo "  docwatch       - Watch assets for changes"
echo "  docshell       - Access PHP container shell"
echo "  docstatus      - Show container status"
echo "  docup/down     - Start/stop containers"
echo ""
echo "ðŸ’¡ Examples:"
echo "  docart migrate"
echo "  docphpunit --filter testMethodName"
echo "  docbuild"
echo "  docshell" 